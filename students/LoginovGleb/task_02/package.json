{
  "name": "wt-ac-2025-courseworks-task-02",
  "version": "0.0.0",
  "private": true,
  "description": "Full-stack course project scaffold (variant 40)",
  "scripts": {
    "dev": "pnpm --parallel --filter @app/server --filter @app/web dev",
    "dev:server": "pnpm --filter @app/server dev",
    "dev:web": "pnpm --filter @app/web dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:unit": "pnpm --filter @app/server test",
    "test:e2e": "pnpm --filter @app/web test:e2e",
    "test:all": "pnpm test:unit && pnpm test:e2e",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:dev": "docker compose -f docker-compose.dev.yml up",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down"
  },
  "packageManager": "pnpm@8.15.4"
}
